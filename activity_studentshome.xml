<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".studentshome"
    android:background="@drawable/abc">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_x="64dp"
        android:layout_y="72dp"
        android:text="Student's Home"
        android:textSize="35dp"
        android:fontFamily="times"
        android:layout_marginBottom="60dp"
        android:textColor="@color/black"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_x="32dp"
        android:layout_y="415dp"
        android:text="View Marks"
        android:background="@drawable/button2"
        android:id="@+id/marks"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_x="30dp"
        android:layout_y="316dp"
        android:text="View Assignments"
        android:layout_marginTop="20dp"
        android:background="@drawable/button2"
        android:id="@+id/assignment"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_x="29dp"
        android:layout_y="202dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button2"
        android:text="View Topics"
        android:id="@+id/topic"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_x="29dp"
        android:layout_y="202dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/button2"
        android:text="Logout"
        android:id="@+id/logoutNowBtn"/>


</LinearLayout>