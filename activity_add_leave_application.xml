<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@drawable/t1"
    tools:context=".AddLeaveApplication">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/studentListDatas"
        android:layout_marginTop="5dp"
        android:background="#cdffffff"
        android:hint="Select a Student">

        <AutoCompleteTextView
            android:id="@+id/auto_complete_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/leaveReasonTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter leave reason"
        android:layout_marginTop="15dp"
        android:background="#cdffffff"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/leaveReasonDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Details"
        android:layout_marginTop="15dp"
        android:background="#cdffffff"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/addLeaveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Applay for  Leave"
        android:layout_marginTop="35dp"
        android:background="@drawable/button2"/>


</LinearLayout>