<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/t1"
    tools:context=".AssignmentDetails">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            >
            <TextView
                android:id="@+id/assignmnetTitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textAlignment="center"
                android:text="Title"
                android:textColor="@color/white"
                tools:layout_editor_absoluteX="180dp"
                tools:layout_editor_absoluteY="81dp" />

            <TextView
                android:id="@+id/assignmnetDesc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Assignment details"
                tools:layout_editor_absoluteX="154dp"
                tools:layout_editor_absoluteY="203dp"
                android:textColor="@color/black"
                android:background="#cdffffff"/>
            <TextView
                android:id="@+id/submitStudents"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textColor="@color/white"

                android:textAlignment="center"
                android:text="Submitted Assignments"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/studentsDetailsRecycleView"
                android:background="#cdffffff"
                />
        </LinearLayout>

    </ScrollView>

</LinearLayout>