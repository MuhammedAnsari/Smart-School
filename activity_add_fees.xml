<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/t1"
    tools:context=".AddFees">
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/feeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Fee Title"
        android:layout_marginTop="15dp"
        android:background="@drawable/wb"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/feeAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Fee Amount"
        android:background="@drawable/wb"
        android:layout_marginTop="5dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/feeDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="Enter Fee Details"
        android:background="@drawable/wb"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/saveFeebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Fee"
        android:layout_marginTop="150dp"
        android:background="@drawable/button2"/>
</LinearLayout>